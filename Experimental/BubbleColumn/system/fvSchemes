FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         cellLimited leastSquares 1;
}

divSchemes
{
    default                         none;
    "div\(phi,alpha.*\)"            Gauss vanLeer;
    "div\(phir,alpha.*,alpha.*\)"   Gauss interfaceCompression 1;
    "div\(alphaPhi.*,U.*\)"         Gauss limitedLinearV 1;
    "div\(alphaPhi.*,S.*\)"         Gauss limitedLinear 1;
    "div\(coeff.*,S.*\)"            Gauss limitedLinear 1;
    "div\(coeff.*,X.*\)"            Gauss limitedLinear 1;
    "div\(alphaPhi.*,X.*\)"         Gauss limitedLinear 1;
    div(Rc)                         Gauss linear;
    "div\(phi.*,U.*\)"              Gauss limitedLinearV 1;
    div(phi,k)                      bounded Gauss upwind;
    div(phi,omega)                  bounded Gauss upwind;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method          meshWave;
}

// ************************************************************************* //
